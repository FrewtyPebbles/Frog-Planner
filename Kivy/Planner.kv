#:import dt datetime
<PlannerScreen>
    orientation:"vertical"
    rootDisplay:mylabel
	rootdate:date
	roottime:time
	roottask:task
	BoxLayout:
		orientation:'horizontal'
		size_hint: 1, .1
		Button:
			text: "Today's task(s)"
			on_press: root.handleData( dt.date.today(), "show today")
		Button:
			text: "All task(s)"
			on_press: root.handleData( dt.date.today(), "show important")
	BoxLayout:
		orientation:"vertical"
		size_hint: 1, .8
		TextInput:
			size_hint: 1, .9
			id:mylabel
			text:"Display"
		TextInput:
			size_hint: 0.2, .1
			id:date
			text:'YYYY-MM-DD'
	BoxLayout:
		orientation:'horizontal'
		size_hint: 1, .1
		TextInput:
			id:time
			size_hint: .2, 1
			text:'00:00 am/pm'
		TextInput:
			id:task
			size_hint: .6, 1
			text:'Your task text goes here.'
		Button:
			text: "Append task"
			size_hint: .2, 1
			on_press: root.appendData( root.rootdate.text, root.roottime.text, root.roottask.text, "append task"); root.addReminder( root.roottask.text, root.roottime.text, root.rootdate.text )